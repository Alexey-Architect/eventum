          o see if a new issue can be created correctly and etc

# http://pastebin.com/pastebin.php?dl=me7e23a
cd /work/eventum/

php -q misc/tsmarty2c.php templates/ > misc/localization/eventum.c

grep -R -l "ev_gettext(" * | grep -v '.svn'  > /tmp/files_to_xgettext; xgettext --files-from=/tmp/files_to_xgettext --keyword=ev_gettext --output=misc/localization/eventum.po

cd misc/localization/

msgmerge sv_SE/LC_MESSAGES/eventum.po eventum.po --output-file=sv_SE/LC_MESSAGES/eventum.po
msgfmt -f -o sv_SE/LC_MESSAGES/eventum.mo sv_SE/LC_MESSAGES/eventum.po

msgmerge it_IT/LC_MESSAGES/eventum.po eventum.po --output-file=it_IT/LC_MESSAGES/eventum.po
msgfmt -f -o it_IT/LC_MESSAGES/eventum.mo it_IT/LC_MESSAGES/eventum.po

msgmerge en_US/LC_MESSAGES/eventum.po eventum.po --output-file=en_US/LC_MESSAGES/eventum.po
msgfmt -f -o en_US/LC_MESSAGES/eventum.mo en_US/LC_MESSAGES/eventum.po

msgmerge de_DE/LC_MESSAGES/eventum.po eventum.po --output-file=de_DE/LC_MESSAGES/eventum.po
msgfmt -f -o de_DE/LC_MESSAGES/eventum.mo de_DE/LC_MESSAGES/eventum.po

msgmerge es_ES/LC_MESSAGES/eventum.po eventum.po --output-file=es_ES/LC_MESSAGES/eventum.po
msgfmt -f -o es_ES/LC_MESSAGES/eventum.mo es_ES/LC_MESSAGES/eventum.po

msgmerge fi_FI/LC_MESSAGES/eventum.po eventum.po --output-file=fi_FI/LC_MESSAGES/eventum.po
