rm -rf tmp
svn export svn://eventum.mysql.org/eventum-gpl/trunk/eventum tmp
cd tmp
find templates -name '*.tpl.html' -o -name '*.tpl.text' | LC_ALL=C sort | xargs tsmarty2c > misc/localization/eventum.c
